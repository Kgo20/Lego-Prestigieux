@model Lego_Prestigieux.Models.Contact

<body>
    <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="#">Accueil</a>
                    <span class="breadcrumb-item active">Contact</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->
    <!-- Contact Start -->
    <div class="container-fluid">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Nous contacter</span></h2>
        <div class="contact-form bg-light p-30">
            <div id="success"></div>
            <form name="sentMessage" id="contactForm" novalidate="novalidate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="control-group">
                    <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Nom"
                           required="required" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <p class="help-block text-danger"></p>
                </div>
                <div class="control-group">
                    <input asp-for="Email" type="email" class="form-control" id="email" placeholder="Courriel"
                           required="required" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <p class="help-block text-danger"></p>
                </div>
                <div class="control-group">
                    <input asp-for="Subject" type="text" class="form-control" id="subject" placeholder="Sujet"
                           required="required" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                    <p class="help-block text-danger"></p>
                </div>
                <div class="control-group">
                    <textarea asp-for="Description" class="form-control" rows="8" id="message" placeholder="Message"
                              required="required"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <p class="help-block text-danger"></p>
                </div>
                <div>
                    <button class="btn btn-primary py-2 px-4" type="submit" id="sendMessageButton">Envoyer</button>
                </div>
            </form>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row center justify-content-center">
            <div class="col-lg-7 col-md-7 col-sm-7 col-12 mb-5  p-30">
                <div class="bg-light p-30 mb-30">
                    <iframe class="h-100" style="width: 100%; height: 250px;"
                            src="https://maps.google.com/maps?q=21%20rue%20Laflamme%20Saint-Liboire&t=&z=13&ie=UTF8&iwloc=&output=embed"
                            frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                </div>
                <div class="bg-light p-30 mb-3">
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>21 Rue Laflamme, Saint-Liboire</p>
                    <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>info@lego.prestigieux.com</p>
                    <p class="mb-0"><i class="fa fa-phone-alt text-primary mr-3"></i>450-999-9999</p>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

