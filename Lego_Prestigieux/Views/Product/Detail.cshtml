@model Lego_Prestigieux.Models.ProductModel

@{
    ViewData["Title"] = "Detail";
}

<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Produit sélectionner</span></h2>
    <div class="contact-form bg-light p-30">
        <div id="success"></div>
        <dl class="row">
            <dt class="col-sm-2">
                <p>Nom</p>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                <p>Détail</p>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Detail)
            </dd>
            <dt class="col-sm-2">
                <p>Prix</p>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                <p>Réduction</p>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Reduction)
            </dd>
            <dt class="col-sm-2">
                <p>Quantité</p>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-2">
                <p>Status</p>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>
            <dt class="col-sm-2">
                <p>Catégorie</p>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category)
            </dd>
            <dt class="col-sm-2">
                <p>Lien</p>
            </dt>
            <dd class="col-sm-10">
                 <img class="img-fluid" src="@Html.DisplayFor(Model => Model.URL)" alt="" style="width: 400px; height: 400px;">
            </dd>
        </dl>

        <form asp-action="Delete">
            <a class="btn btn-primary" asp-action="Index" asp-controller="Home">Retour</a>
        </form>
    </div>
</div>
