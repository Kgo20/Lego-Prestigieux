<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Lego Prestigieux</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/img/" rel="logo">

</head>

<body>
    <!-- Topbar Start -->
    <div class="container-fluid">
        <div class="row align-items-center bg-light py-3 sm-12 d-lg-flex d-inline">
            <div class="col-lg-4">
                <a asp-action="Index" asp-controller="Home" class="text-decoration-none">
                    <span class="h1 text-uppercase text-primary bg-dark px-2">LEGO</span>
                    <span class="h1 text-uppercase text-dark bg-primary px-2 ml-n1">PRESTIGIEUX</span>
                </a>
            </div>
            <div class="col-lg-4 col-12 text-left">
                <vc:nav-bar></vc:nav-bar>
            </div>
            <div class="col-lg-4 col-12  text-right" style="padding-right: 20px">
                <p class="m-0">Service client</p>
                <h5>450-999-9999</h5>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a class=" btn btn-primary" asp-action="LogIn" asp-controller="Account">Se Connecter</a>
                    <a class=" btn btn-primary" asp-action="Create" asp-controller="Account">Créer un Compte</a>

                }
                else
                {
                    <a class=" btn btn-primary" asp-action="LogOut" asp-controller="Account">Déconnexion</a>
                    <a class=" btn btn-primary" asp-action="CreateMoreAddress" asp-controller="Account">Ajouter une Adresse</a>
                }
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <div class="container-fluid bg-dark mb-30">
        <div class="row px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a class="btn d-flex align-items-center justify-content-between bg-primary w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; padding: 0 30px;">
                    <h6 class="text-dark m-0"><i class="fa fa-bars mr-2"></i>Catégorie</h6>
                    <i class="fa fa-angle-down text-dark"></i>
                </a>
                <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 999;">
                    <div class="navbar-nav w-100">
                        <a asp-controller="Product" asp-action="FilterCategory" asp-route-category="0" class="nav-item nav-link">Les plus prestigieux</a>
                        <a asp-controller="Product" asp-action="FilterCategory" asp-route-category="1" class="nav-item nav-link">Nouveautés</a>
                        <a asp-controller="Product" asp-action="FilterCategory" asp-route-category="2" class="nav-item nav-link">Les meilleurs vendeurs</a>
                        <a asp-controller="Product" asp-action="FilterCategory" asp-route-category="3" class="nav-item nav-link">Lego de collection</a>
                        <a asp-controller="Product" asp-action="FilterCategory" asp-route-category="4" class="nav-item nav-link">Pour adultes</a>
                        <a asp-controller="Product" asp-action="FilterCategory" asp-route-category="5" class="nav-item nav-link">Pour enfants</a>
                        <a asp-controller="Product" asp-action="FilterCategory" asp-route-category="6" class="nav-item nav-link">Star Wars</a>
                        <a asp-controller="Product" asp-action="FilterCategory" asp-route-category=""  class="nav-item nav-link">Tous les produits</a>
                    </div>
                </nav>
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <span class="h1 text-uppercase text-dark bg-light px-2">LEGO</span>
                        <span class="h1 text-uppercase text-light bg-primary px-2 ml-n1">PRESTIGIEUX</span>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Index">Accueil</a>
                            <a class="nav-item nav-link" asp-controller="Product" asp-action="FilterCategory" asp-route-category="">Magasiner</a>
                            <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                            <a class="nav-item nav-link" asp-area="" asp-controller="Command" asp-action="List">Commandes</a>
                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <a class="nav-item nav-link" asp-area="" asp-controller="Product" asp-action="Create">Créer un nouveau produit</a>
                            }
                        </div>
                        <div class="navbar-nav ml-auto py-0 d-none d-lg-block">
                            <a href="" class="btn px-0">
                                <i class="fas fa-heart text-primary"></i>
                                <span class="badge text-secondary border border-secondary rounded-circle" style="padding-bottom: 2px;">0</span>
                            </a>
                            <a asp-action="Index" asp-controller="Cart" class="btn px-0 ml-3">
                                <i class="fas fa-shopping-cart text-primary"></i>
                                <span class="badge text-secondary border border-secondary rounded-circle" style="padding-bottom: 2px;">0</span>
                            </a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- Navbar End -->

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-secondary mt-5 pt-5">
        <div class="row px-xl-6 pt-5">
            <div class="col-lg-5 col-md-12 mb-5 pr-3 pr-xl-5">
                <h1 class="text-secondary text-uppercase mb-4">LEGO PRESTIGIEUX</h1>
                <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>21 Rue Laflamme, Saint-Liboire</p>
                <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>info@lego.prestigieux.com</p>
                <p class="mb-0"><i class="fa fa-phone-alt text-primary mr-3"></i>450-999-9999</p>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="row">
                    <div class="col-md-12 mb-5">
                        <h5 class="text-secondary text-uppercase mb-4">Que cherchez-vous</h5>
                        <div class="row">
                            <div class="col-md-6 mb-5">
                                <div class="d-flex flex-column justify-content-start ">
                                    <a class="text-secondary mb-2" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-angle-right mr-2"></i>Accueil</a>
                                    <a class="text-secondary mb-2" asp-controller="Product" asp-action="FilterCategory" asp-route-category=""><i class="fa fa-angle-right mr-2"></i>Magasiner</a>
                                    <a class="text-secondary mb-2" href="#"><i class="fa fa-angle-right mr-2"></i>Panier</a>
                                </div>
                            </div>
                            <div class="col-md-6 mb-5">
                                <div class="d-flex flex-column justify-content-start ">
                                    <a class="text-secondary mb-2" asp-controller="Home" asp-action="AboutUs"><i class="fa fa-angle-right mr-2"></i>À propos</a>
                                    <a class="text-secondary mb-2" asp-area="" asp-controller="Home" asp-action="Contact"><i class="fa fa-angle-right mr-2"></i>Nous contacter</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* <div class="col-md-6 mb-5">
                        <h5 class="text-secondary text-uppercase mb-4">Newsletter</h5>
                        <p>Duo stet tempor ipsum sit amet magna ipsum tempor est</p>
                        <form action="">
                        <div class="input-group">
                        <input type="text" class="form-control" placeholder="Your Email Address">
                        <div class="input-group-append">
                        <button class="btn btn-primary">Sign Up</button>
                        </div>
                        </div>
                        </form>
                        <h6 class="text-secondary text-uppercase mt-4 mb-3">Suivez nous</h6>
                        <div class="d-flex">
                        <a class="btn btn-primary btn-square mr-2" href="#"><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-primary btn-square mr-2" href="#"><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-primary btn-square mr-2" href="#"><i class="fab fa-linkedin-in"></i></a>
                        <a class="btn btn-primary btn-square" href="#"><i class="fab fa-instagram"></i></a>
                        </div>
                        </div>*@
                </div>
            </div>
        </div>
        <div class="row border-top mx-xl-5 py-4" style="border-color: rgba(256, 256, 256, .1) !important;">
            <div class="col-md-12 px-xl-0 text-center">
                <img class="img-fluid" src="~/img/payments.png" alt="">
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="~/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>

    <script src="~/jquery-3.6.0.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
