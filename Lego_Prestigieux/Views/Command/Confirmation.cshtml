
@{ ViewData["Title"] = "Confirmation"; }

<section class="row bg-light rounded">
    <div class="col p-2">
        <h2>Confirmation</h2>
        <p>Votre achat a été confirmé!</p>

        <div class="float-right">
            <span class="text-muted">Vous aller être redirigé dans <span id="countdown"></span> secondes...</span>
            <a asp-controller="Command" asp-action="List" class="btn btn-success">Retour</a>
        </div>
    </div>
</section>

@section scripts {
    <script>
        (function () {
            "use strict";

            $(document).ready(function () {
                let timeSec = 5;
                let countdown = $("#countdown");

                countdown.text(timeSec);
                setInterval(function () {
                    timeSec--;
                    countdown.text(timeSec);

                    if (timeSec == 0) {
                        window.location.replace("@Url.Action("List", "Command")")
                    }

                }, 1000);
            });
        })();
    </script>
}
